{
  "manifest_version": 2,
  "name": "DefPromo",
  "version": "1.3.2",
  "description": "AI-powered social media self-promotion assistant with analytics",
  "homepage_url": "https://defpromo.com",
  "permissions": [
    "storage",
    "activeTab",
    "tabs",
    "https://twitter.com/*",
    "https://x.com/*",
    "https://www.linkedin.com/*",
    "https://www.reddit.com/*",
    "https://www.facebook.com/*",
    "https://www.instagram.com/*",
    "https://www.threads.net/*",
    "https://www.youtube.com/*",
    "https://www.tiktok.com/*",
    "https://stacker.news/*",
    "https://primal.net/*",
    "https://*.slack.com/*",
    "https://discord.com/*",
    "https://web.telegram.org/*",
    "https://chrome.browserless.io/*",
    "https://production-sfo.browserless.io/*",
    "https://*.browserless.io/*",
    "https://app.scrapingbee.com/*",
    "http://api.scraperapi.com/*",
    "https://api.openai.com/*"
  ],
  "background": {
    "scripts": ["background/background-firefox.js"],
    "persistent": false
  },
  "browser_action": {
    "default_popup": "src/popup/index.html",
    "default_icon": {
      "16": "icons/icon-16x16.png",
      "32": "icons/icon-32x32.png",
      "48": "icons/icon-48x48.png",
      "128": "icons/icon-128x128.png"
    }
  },
  "sidebar_action": {
    "default_panel": "src/sidepanel/index.html",
    "default_icon": {
      "16": "icons/icon-16x16.png",
      "32": "icons/icon-32x32.png",
      "48": "icons/icon-48x48.png",
      "128": "icons/icon-128x128.png"
    }
  },
  "icons": {
    "16": "icons/icon-16x16.png",
    "32": "icons/icon-32x32.png",
    "48": "icons/icon-48x48.png",
    "128": "icons/icon-128x128.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/content-sidebar-injector.js"],
      "run_at": "document_idle",
      "all_frames": false
    },
    {
      "matches": ["https://twitter.com/*", "https://x.com/*"],
      "js": ["content/content-twitter.js"],
      "run_at": "document_idle"
    },
    {
      "matches": ["https://www.linkedin.com/*"],
      "js": ["content/content-linkedin.js"],
      "run_at": "document_idle"
    },
    {
      "matches": ["https://www.reddit.com/*"],
      "js": ["content/content-reddit.js"],
      "run_at": "document_idle"
    },
    {
      "matches": ["https://www.facebook.com/*"],
      "js": ["content/content-facebook.js"],
      "run_at": "document_idle"
    },
    {
      "matches": ["https://stacker.news/*"],
      "js": ["content/content-stacker.js"],
      "run_at": "document_idle"
    },
    {
      "matches": ["https://primal.net/*"],
      "js": ["content/content-primal.js"],
      "run_at": "document_idle"
    },
    {
      "matches": ["https://*.slack.com/*"],
      "js": ["content/content-slack.js"],
      "run_at": "document_idle"
    },
    {
      "matches": ["https://discord.com/*"],
      "js": ["content/content-discord.js"],
      "run_at": "document_idle"
    },
    {
      "matches": ["https://web.telegram.org/*"],
      "js": ["content/content-telegram.js"],
      "run_at": "document_idle"
    },
    {
      "matches": ["https://www.tiktok.com/*"],
      "js": ["content/content-tiktok.js"],
      "run_at": "document_idle"
    },
    {
      "matches": ["https://www.instagram.com/*"],
      "js": ["content/content-instagram.js"],
      "run_at": "document_idle"
    },
    {
      "matches": ["https://www.threads.net/*"],
      "js": ["content/content-threads.js"],
      "run_at": "document_idle"
    },
    {
      "matches": ["https://www.youtube.com/*"],
      "js": ["content/content-youtube.js"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": ["assets/*", "icons/*", "src/sidebar/*"],
  "browser_specific_settings": {
    "gecko": {
      "id": "defpromo@profullstack.com",
      "strict_min_version": "79.0",
      "data_collection_permissions": {
        "required": ["none"]
      }
    }
  }
}