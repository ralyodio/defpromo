{
  "manifest_version": 3,
  "name": "DefPromo",
  "version": "1.0.0",
  "description": "AI-powered social media self-promotion assistant with analytics",
  "homepage_url": "https://defpromo.com",
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://twitter.com/*",
    "https://x.com/*",
    "https://www.linkedin.com/*",
    "https://www.reddit.com/*",
    "https://www.facebook.com/*",
    "https://stacker.news/*",
    "https://bsky.app/*",
    "https://*.bsky.social/*",
    "https://primal.net/*",
    "https://*.slack.com/*",
    "https://discord.com/*",
    "https://web.telegram.org/*",
    "https://chrome.browserless.io/*",
    "https://production-sfo.browserless.io/*",
    "https://*.browserless.io/*",
    "https://app.scrapingbee.com/*",
    "http://api.scraperapi.com/*",
    "https://api.openai.com/*"
  ],
  "background": {
    "service_worker": "background/service-worker.js",
    "type": "module"
  },
  "action": {
    "default_icon": {
      "16": "icons/icon-16.svg",
      "32": "icons/icon-32.svg",
      "48": "icons/icon-48.svg",
      "128": "icons/icon-128.svg"
    }
  },
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+S",
        "mac": "Command+Shift+S"
      },
      "description": "Toggle DefPromo sidebar"
    }
  },
  "icons": {
    "16": "icons/icon-16.svg",
    "32": "icons/icon-32.svg",
    "48": "icons/icon-48.svg",
    "128": "icons/icon-128.svg"
  },
  "content_scripts": [
    {
      "matches": ["https://*/*", "http://*/*"],
      "js": ["content/content-sidebar-injector.js"],
      "run_at": "document_idle",
      "all_frames": false
    },
    {
      "matches": ["https://twitter.com/*", "https://x.com/*"],
      "js": ["content/content-twitter.js"],
      "run_at": "document_idle"
    },
    {
      "matches": ["https://www.linkedin.com/*"],
      "js": ["content/content-linkedin.js"],
      "run_at": "document_idle"
    },
    {
      "matches": ["https://www.reddit.com/*"],
      "js": ["content/content-reddit.js"],
      "run_at": "document_idle"
    },
    {
      "matches": ["https://www.facebook.com/*"],
      "js": ["content/content-facebook.js"],
      "run_at": "document_idle"
    },
    {
      "matches": ["https://stacker.news/*"],
      "js": ["content/content-stacker.js"],
      "run_at": "document_idle"
    },
    {
      "matches": ["https://bsky.app/*", "https://*.bsky.social/*"],
      "js": ["content/content-bluesky.js"],
      "run_at": "document_idle"
    },
    {
      "matches": ["https://primal.net/*"],
      "js": ["content/content-primal.js"],
      "run_at": "document_idle"
    },
    {
      "matches": ["https://*.slack.com/*"],
      "js": ["content/content-slack.js"],
      "run_at": "document_idle"
    },
    {
      "matches": ["https://discord.com/*"],
      "js": ["content/content-discord.js"],
      "run_at": "document_idle"
    },
    {
      "matches": ["https://web.telegram.org/*"],
      "js": ["content/content-telegram.js"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "assets/*",
        "icons/*",
        "src/sidebar/index.html",
        "src/sidebar/*.js",
        "src/sidebar/*.css"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}